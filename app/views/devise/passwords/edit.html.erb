<div class="row">
  <div class="span6" style="margin:0 auto;float:none;">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
      <%= f.hidden_field :reset_password_token %>
      <legend><%= t('devise.links.change_my_password') %></legend>

      <div class="control-group">
        <%= f.label :password, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit t('devise.links.change_my_password'), :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                :back, :class => 'btn' %>
      </div>
  </fieldset>

<% end %>
</div>
</div>

