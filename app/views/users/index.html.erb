<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped" id="usersAjaxTable">
	<thead>
    <tr>
      <th width="10%"><%= model_class.human_attribute_name(:id) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:login) %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>


<%
=begin
%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:login) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.login %></td>
        <td><%= user.admin %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= (link_to "<h4><i class='icon-edit'></i></h4>".html_safe,
                      edit_user_path(user), :class => 'btn btn-mini') unless cannot? :edit, User %>
          <%= (link_to "<h4><i class='icon-trash'></i></h4>".html_safe,
                      user_path(user),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger') unless cannot? :destroy, User %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%
=end
%>
